<div class="row">
	<div class="col-md-6 text-center"><h1 class="heading">Hey <%= @user.name %></h1></div>
	<div class="col-md-6 text-center"><%= link_to image_tag('cancel.png', class: 'small-circle'), user_path(session['user_id']) %></div>
</div>

<div class="ruby-form">
	<%= form_for @user do |f| %>
		Name:             <%= f.text_field :name %><br>
		Email:            <%= f.text_field :email %><br><br>
		New Password:     <%= f.password_field :password %><br>
		Confirm Password: <%= f.password_field :password_confirmation %><br>
		<!--Profile picture:  <%#= f.file_field :avatar %><br><br>-->

		<%= f.submit %>
	<% end %>
</div>