<div class="row">
	<div class="col-md-12 text-center"><img style="height:300px" src="/assets/logo.png"></div>
</div>

<div class="ruby-form">
	<%= form_for @user, url: { controller: 'sessions', action: 'create' } do |f| %>
		Email:    <%= f.text_field :email %><br />
		Password: <%= f.password_field :password %><br /><br />

		<%= f.submit 'Log In' %>
	<% end %>

	<%= link_to 'Create a new user!', new_user_path %>
</div>